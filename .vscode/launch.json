  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules"
      },
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "node_modules/.bin/jest",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}